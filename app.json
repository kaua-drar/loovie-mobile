{
  "expo": {
    "name": "Loovie",
    "slug": "Loovie",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Urbanist-Thin",
            "./src/assets/fonts/Urbanist-ExtraLight",
            "./src/assets/fonts/Urbanist-Light",
            "./src/assets/fonts/Urbanist-Regular",
            "./src/assets/fonts/Urbanist-Medium",
            "./src/assets/fonts/Urbanist-SemiBold",
            "./src/assets/fonts/Urbanist-Bold",
            "./src/assets/fonts/Urbanist-ExtraBold",
            "./src/assets/fonts/Urbanist-Black"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
